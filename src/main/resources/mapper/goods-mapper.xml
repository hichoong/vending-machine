<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezace.vendingmachine.repository.GoodsMapper">
    <select id="getGoodsList" resultType="com.ezace.vendingmachine.domain.vo.GoodsVo">
        select * from goods
    </select>
    
    <update id="buyGoods" parameterType="com.ezace.vendingmachine.domain.dto.BuyGoods">
        update goods
            set
        count = count -#{count}
        where name = #{name}
    </update>


</mapper>